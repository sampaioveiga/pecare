<% provide(:title, @patient.name) %>

<!-- aside column -->
<aside class="col-md-3">
  <div class="panel panel-default" data-spy="affix" data-offset-top="55">
    <div class="panel-heading">
      <h4><%= @patient.name %></h4>
    </div>
    <div class="panel-body">
      <%= render 'shared/patient_data' %>
      <ul class="nav nav-pills nav-stacked">
        <%= render 'shared/pulmonary_appointments_menu' if can? (:manage), PulmonaryAppointment %>
        <%= render 'shared/tiss_evaluations_menu' if can? (:manage), TissEvaluation %>
        <li role="presentation" class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            <%= t('.patient-menu') %> <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li role="presentation"><%= link_to t('.edit-patient-link'), edit_patient_path(@patient) %></li>
            <li role="presentation"><%= link_to t('.patient-index'), patients_path() %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</aside>

<!-- main column  -->
<div class="col-md-9">
  <%= render 'pulmonary/appointments' if can? :show, PulmonaryAppointment %>
  <%= render 'icu/tiss_evaluations' if can? :show, TissEvaluation %>
</div>