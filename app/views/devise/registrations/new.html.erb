<%= provide(:title, t(".sign-up")) %>

<div class="col-md-3">
  <div class="panel panel-default">
    <div class="panel-body">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<div class="col-md-9">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= t(".sign-up") %></h4>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :title, t(".title")%>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :full_name, t(".full_name")%>
          <%= f.text_field :full_name, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :employee_id, t(".employee_id")%>
          <%= f.text_field :employee_id, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :phone_number, t(".phone_number")%>
          <%= f.text_field :phone_number, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :cellphone_number, t(".cellphone_number")%>
          <%= f.text_field :cellphone_number, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :email, t(".email") %>
          <em>(<%= t(".email-format-ulsne") %>)</em>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :department_id, t(".department_id")%>
          <%= f.collection_select(:department_id, Department.order(:department_name), :id, :department_name, {}, class: 'form-control') %>
        </div>

        <div class="field">
          <%= f.label :office_location_id, t(".office_location_id")%>
          <%= f.collection_select(:office_location_id, OfficeLocation.order(:location_name), :id, :location_name, {}, class: 'form-control') %>
        </div>

        <div class="field">
          <%= f.label :password, t(".password") %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> <%= t(".characters-minimum") %>)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, t(".password-confirmation") %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="actions col-md-2">
          <%= f.submit t("submit"), class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>