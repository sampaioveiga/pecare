<% provide(:title, t('.edit')) %>

<div class="col-md-9 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= t('.edit') %></h4>
    </div>
    <div class="panel-body">
      <%= form_for @role do |f|%>
        <%= f.label :pulmonology %>
        <%= f.select :pulmonology, options_for_select([ [t('pulmonology-no-access'), "pulmonology-no-access"], ["1", 1], ["2",2] ]), {}, class: 'form-control' %>

        <%= f.label :icu %>
        <%= f.select :icu, options_for_select([ ["0", 0], ["1", 1], ["2",2] ]), {}, class: 'form-control' %>

        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>